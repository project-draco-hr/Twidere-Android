{
switch (scrollState) {
case SCROLL_STATE_FLING:
case SCROLL_STATE_TOUCH_SCROLL:
{
      break;
    }
case SCROLL_STATE_IDLE:
{
    for (int i=mListView.getFirstVisiblePosition(), j=mListView.getLastVisiblePosition(); i < j; i++) {
      mReadPositions.add(i);
    }
    removeUnreadCounts();
    break;
  }
}
}
