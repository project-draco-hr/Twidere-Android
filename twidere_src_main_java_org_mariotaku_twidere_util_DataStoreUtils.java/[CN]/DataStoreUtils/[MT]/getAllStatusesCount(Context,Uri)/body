{
  if (context == null)   return 0;
  final ContentResolver resolver=context.getContentResolver();
  final String table=getTableNameByUri(uri);
  if (table == null)   return 0;
  final Cursor cur=ContentResolverUtils.query(resolver,uri,new String[]{Statuses.STATUS_ID},buildStatusFilterWhereClause(table,null).getSQL(),null,null);
  if (cur == null)   return 0;
  try {
    return cur.getCount();
  }
  finally {
    cur.close();
  }
}
