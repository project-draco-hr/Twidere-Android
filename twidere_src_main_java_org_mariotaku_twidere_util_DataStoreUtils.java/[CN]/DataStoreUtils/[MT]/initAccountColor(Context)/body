{
  if (context == null)   return;
  final Cursor cur=context.getContentResolver().query(Accounts.CONTENT_URI,new String[]{Accounts.ACCOUNT_KEY,Accounts.COLOR},null,null,null);
  if (cur == null)   return;
  final int id_idx=cur.getColumnIndex(Accounts.ACCOUNT_KEY), color_idx=cur.getColumnIndex(Accounts.COLOR);
  cur.moveToFirst();
  while (!cur.isAfterLast()) {
    cur.moveToNext();
  }
  cur.close();
}
