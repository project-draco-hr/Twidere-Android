{
  final String host=accountKey.getHost();
  if (host != null) {
    for (    final Uri uri : STATUSES_URIS) {
      final String deleteWhere=Expression.and(Expression.likeRaw(new Column(Statuses.ACCOUNT_KEY),"'%@'||?"),Expression.or(Expression.equalsArgs(Statuses.STATUS_ID),Expression.equalsArgs(Statuses.RETWEET_ID))).getSQL();
      cr.delete(uri,deleteWhere,new String[]{host,statusId,statusId});
      final String updateWhere=Expression.and(Expression.likeRaw(new Column(Statuses.ACCOUNT_KEY),"'%@'||?"),Expression.equalsArgs(Statuses.MY_RETWEET_ID)).getSQL();
      if (status != null) {
        final ContentValues values=new ContentValues();
        values.put(Statuses.MY_RETWEET_ID,-1);
        values.put(Statuses.RETWEET_COUNT,status.retweet_count - 1);
        cr.update(uri,values,updateWhere,new String[]{host,statusId});
      }
    }
  }
 else {
    for (    final Uri uri : STATUSES_URIS) {
      final String deleteWhere=Expression.or(Expression.equalsArgs(Statuses.STATUS_ID),Expression.equalsArgs(Statuses.RETWEET_ID)).getSQL();
      cr.delete(uri,deleteWhere,new String[]{statusId,statusId});
      final String updateWhere=Expression.equalsArgs(Statuses.MY_RETWEET_ID).getSQL();
      if (status != null) {
        final ContentValues values=new ContentValues();
        values.put(Statuses.MY_RETWEET_ID,-1);
        values.put(Statuses.RETWEET_COUNT,status.retweet_count - 1);
        cr.update(uri,values,updateWhere,new String[]{statusId});
      }
    }
  }
}
