{
  if (context == null || accountId < 0)   return null;
  final String[] projection={Accounts.ACCOUNT_TYPE};
  Cursor cur=context.getContentResolver().query(Accounts.CONTENT_URI,projection,Expression.equals(Accounts.ACCOUNT_ID,accountId).getSQL(),null,null);
  if (cur == null)   return null;
  try {
    if (cur.moveToFirst()) {
      return cur.getString(0);
    }
  }
  finally {
    cur.close();
  }
  return null;
}
