{
  if (accountKeys == null) {
    accountKeys=getActivatedAccountKeys(context);
  }
  final Expression selection=Expression.and(Expression.inArgs(new Column(Statuses.ACCOUNT_KEY),accountKeys.length),greaterThan ? Expression.greaterThanArgs(compareColumn) : Expression.lesserThanArgs(compareColumn),buildStatusFilterWhereClause(getTableNameByUri(uri),null));
  final String[] whereArgs=new String[accountKeys.length + 1];
  for (int i=0; i < accountKeys.length; i++) {
    whereArgs[i]=accountKeys[i].toString();
  }
  whereArgs[accountKeys.length]=String.valueOf(compare);
  return queryCount(context,uri,selection.getSQL(),whereArgs);
}
