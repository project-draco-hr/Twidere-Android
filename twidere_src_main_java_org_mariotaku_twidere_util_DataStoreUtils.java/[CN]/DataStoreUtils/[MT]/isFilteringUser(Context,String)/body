{
  final ContentResolver cr=context.getContentResolver();
  final Expression where=Expression.equalsArgs(Filters.Users.USER_ID);
  final Cursor c=cr.query(Filters.Users.CONTENT_URI,new String[]{SQLFunctions.COUNT()},where.getSQL(),new String[]{userId},null);
  if (c == null)   return false;
  try {
    if (c.moveToFirst()) {
      return c.getLong(0) > 0;
    }
  }
  finally {
    c.close();
  }
  return false;
}
