{
  ensureAuthorizationEnabled();
  final String url=conf.getRestBaseURL() + (status.isWithMedia() ? ENDPOINT_STATUSES_UPDATE_WITH_MEDIA : ENDPOINT_STATUSES_UPDATE);
  final String signUrl=conf.getSigningRestBaseURL() + (status.isWithMedia() ? ENDPOINT_STATUSES_UPDATE_WITH_MEDIA : ENDPOINT_STATUSES_UPDATE);
  return factory.createStatus(post(url,signUrl,status.asHttpParameterArray(INCLUDE_ENTITIES)));
}
