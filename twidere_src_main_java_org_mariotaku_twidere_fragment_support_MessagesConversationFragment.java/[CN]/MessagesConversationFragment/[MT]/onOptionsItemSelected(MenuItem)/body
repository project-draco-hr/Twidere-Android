{
switch (item.getItemId()) {
case R.id.delete_all:
{
      final ParcelableCredentials account=mAccount;
      if (account == null || mRecipient == null)       return true;
      mTwitterWrapper.destroyMessageConversationAsync(new AccountKey(account.account_id,account.account_host),mRecipient.id);
      return true;
    }
}
return super.onOptionsItemSelected(item);
}
