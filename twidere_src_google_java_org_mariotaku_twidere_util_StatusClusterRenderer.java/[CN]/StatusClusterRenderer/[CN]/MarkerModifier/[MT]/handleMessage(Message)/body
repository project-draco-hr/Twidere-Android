{
  if (!mListenerAdded) {
    Looper.myQueue().addIdleHandler(this);
    mListenerAdded=true;
  }
  removeMessages(BLANK);
  lock.lock();
  try {
    for (int i=0; i < 10; i++) {
      performNextTask();
    }
    if (!isBusy()) {
      mListenerAdded=false;
      Looper.myQueue().removeIdleHandler(this);
      busyCondition.signalAll();
    }
 else {
      sendEmptyMessageDelayed(BLANK,10);
    }
  }
  finally {
    lock.unlock();
  }
}
