{
  final Cursor c=mCursor;
  final Indices i=mIndices;
  mSelectedAccountIndex=-1;
  if (c != null && i != null && c.moveToFirst()) {
    while (!c.isAfterLast()) {
      if (c.getLong(mIndices.account_id) == mSelectedAccountId) {
        mSelectedAccountIndex=c.getPosition();
        break;
      }
      c.moveToNext();
    }
  }
}
