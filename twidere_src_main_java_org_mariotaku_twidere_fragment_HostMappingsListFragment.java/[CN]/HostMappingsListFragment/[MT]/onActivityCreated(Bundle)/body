{
  super.onActivityCreated(savedInstanceState);
  setHasOptionsMenu(true);
  mHostMapping=SharedPreferencesWrapper.getInstance(getActivity(),HOST_MAPPING_PREFERENCES_NAME,Context.MODE_PRIVATE);
  mHostMapping.registerOnSharedPreferenceChangeListener(this);
  mAdapter=new HostMappingAdapter(getActivity());
  setListAdapter(mAdapter);
  mListView=getListView();
  mListView.setChoiceMode(ListView.CHOICE_MODE_MULTIPLE_MODAL);
  mListView.setMultiChoiceModeListener(this);
  reloadHostMappings();
}
