{
  if (context == null)   return new String[0];
  final String[] cols=new String[]{Accounts.NAME};
  final String where=accountIds != null ? Expression.in(new Column(Accounts.ACCOUNT_ID),new RawItemArray(accountIds)).getSQL() : null;
  final Cursor cur=ContentResolverUtils.query(context.getContentResolver(),Accounts.CONTENT_URI,cols,where,null,null);
  if (cur == null)   return new String[0];
  try {
    cur.moveToFirst();
    final String[] names=new String[cur.getCount()];
    int i=0;
    while (!cur.isAfterLast()) {
      names[i++]=cur.getString(0);
      cur.moveToNext();
    }
    return names;
  }
  finally {
    cur.close();
  }
}
