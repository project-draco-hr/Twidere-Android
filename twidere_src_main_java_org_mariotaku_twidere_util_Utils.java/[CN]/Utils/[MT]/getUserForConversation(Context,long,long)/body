{
  final ContentResolver cr=context.getContentResolver();
  final Expression where=Expression.and(Expression.equals(ConversationEntries.ACCOUNT_ID,accountId),Expression.equals(ConversationEntries.CONVERSATION_ID,conversationId));
  final Cursor c=cr.query(ConversationEntries.CONTENT_URI,null,where.getSQL(),null,null);
  if (c == null)   return null;
  try {
    if (c.moveToFirst())     return ParcelableUserUtils.fromDirectMessageConversationEntry(c);
  }
  finally {
    c.close();
  }
  return null;
}
