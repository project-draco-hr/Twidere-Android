{
  final ContentResolver cr=context.getContentResolver();
  final Where where=Where.and(Where.equals(ConversationEntries.ACCOUNT_ID,accountId),Where.equals(ConversationEntries.CONVERSATION_ID,conversationId));
  final Cursor c=cr.query(ConversationEntries.CONTENT_URI,null,where.getSQL(),null,null);
  try {
    if (c.moveToFirst())     return ParcelableUser.fromDirectMessageConversationEntry(c);
  }
  finally {
    c.close();
  }
  return null;
}
