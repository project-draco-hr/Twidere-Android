{
  final PackageManager pm=context.getPackageManager();
  cb.setClientName("TwitterAndroid");
  cb.setClientURL(null);
  String versionName;
  int versionCode;
  try {
    final PackageInfo packageInfo=pm.getPackageInfo("com.twitter.android",0);
    versionName=packageInfo.versionName;
    versionCode=packageInfo.versionCode;
  }
 catch (  PackageManager.NameNotFoundException e) {
    versionName="5.53.0";
    versionCode=4030814;
  }
  cb.setClientVersion(versionName);
  final String deviceInfo=String.format(Locale.ROOT,"%s/%s (%s;%s;%s;%s;)",Build.MODEL,Build.VERSION.RELEASE,Build.MANUFACTURER,Build.MODEL,Build.BRAND,Build.PRODUCT);
  cb.setHttpUserAgent(String.format(Locale.ROOT,"TwitterAndroid/%s (%d-%c-%d) %s",versionName,versionCode,'r',versionCode / 4200,deviceInfo));
}
