{
  final DividerItemDecoration itemDecoration=new DividerItemDecoration(context,((LinearLayoutManager)recyclerView.getLayoutManager()).getOrientation());
  final Resources res=context.getResources();
  final int decorPaddingLeft=res.getDimensionPixelSize(R.dimen.element_spacing_normal) * 3 + res.getDimensionPixelSize(R.dimen.icon_size_status_profile_image);
  itemDecoration.setPadding(decorPaddingLeft,0,0,0);
  itemDecoration.setDecorationEndOffset(1);
  return itemDecoration;
}
