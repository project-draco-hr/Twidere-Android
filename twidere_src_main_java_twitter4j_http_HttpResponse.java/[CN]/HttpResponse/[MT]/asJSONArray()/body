{
  if (jsonArray == null) {
    try {
      if (responseAsString == null) {
        responseAsString=asString();
      }
      jsonArray=new JSONArray(responseAsString);
      if (CONF.isPrettyDebugEnabled()) {
        logger.debug(jsonArray.toString(1));
      }
 else {
        logger.debug(responseAsString != null ? responseAsString : jsonArray.toString());
      }
    }
 catch (    final JSONException jsone) {
      if (logger.isDebugEnabled())       throw new TwitterException(jsone.getMessage() + ":" + responseAsString,jsone);
 else       throw new TwitterException(jsone.getMessage(),jsone);
    }
 finally {
      disconnectForcibly();
    }
  }
  return jsonArray;
}
