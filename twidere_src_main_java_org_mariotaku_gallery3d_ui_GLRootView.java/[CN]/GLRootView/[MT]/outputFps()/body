{
  final long now=System.nanoTime();
  if (mFrameCountingStart == 0) {
    mFrameCountingStart=now;
  }
 else   if (now - mFrameCountingStart > 1000000000) {
    Log.d(TAG,"fps: " + (double)mFrameCount * 1000000000 / (now - mFrameCountingStart));
    mFrameCountingStart=now;
    mFrameCount=0;
  }
  ++mFrameCount;
}
