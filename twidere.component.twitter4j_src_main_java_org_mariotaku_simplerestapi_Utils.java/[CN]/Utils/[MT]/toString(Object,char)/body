{
  final Class<?> valueClass=value.getClass();
  if (valueClass.isArray()) {
    final StringBuilder sb=new StringBuilder();
    for (int i=0, j=Array.getLength(value); i < j; i++) {
      if (i != 0) {
        sb.append(delimiter);
      }
      sb.append(Array.get(value,i));
    }
    return sb.toString();
  }
 else {
    return value.toString();
  }
}
