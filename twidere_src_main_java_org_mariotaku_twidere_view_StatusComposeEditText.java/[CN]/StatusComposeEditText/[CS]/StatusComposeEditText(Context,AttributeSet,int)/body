{
  super(context,attrs,defStyle);
  mAdapter=new UserHashtagAutoCompleteAdapter(this);
  setTokenizer(new ScreenNameTokenizer());
  setMovementMethod(ArrowKeyMovementMethod.getInstance());
  setRawInputType(InputType.TYPE_CLASS_TEXT | InputType.TYPE_TEXT_FLAG_CAP_SENTENCES | InputType.TYPE_TEXT_FLAG_MULTI_LINE);
}
