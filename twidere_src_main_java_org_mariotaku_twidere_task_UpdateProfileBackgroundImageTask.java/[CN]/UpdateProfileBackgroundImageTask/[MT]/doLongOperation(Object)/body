{
  try {
    final MicroBlog twitter=MicroBlogAPIFactory.getTwitterInstance(mContext,mAccountKey,true);
    TwitterWrapper.updateProfileBackgroundImage(mContext,twitter,mImageUri,mTile,mDeleteImage);
    try {
      Thread.sleep(5000L);
    }
 catch (    InterruptedException e) {
      Log.w(LOGTAG,e);
    }
    final User user=twitter.verifyCredentials();
    return SingleResponse.getInstance(ParcelableUserUtils.fromUser(user,mAccountKey));
  }
 catch (  TwitterException|IOException e) {
    return SingleResponse.getInstance(e);
  }
}
