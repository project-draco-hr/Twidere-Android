{
  super(context,attrs,defStyle);
  final TypedArray a=context.obtainStyledAttributes(null,new int[]{android.R.attr.subtitleTextStyle},android.R.attr.actionBarStyle,android.R.style.Widget_Holo_ActionBar);
  final int textAppearance=a.getResourceId(0,android.R.style.Widget_Holo_ActionBar);
  a.recycle();
  setTextAppearance(context,textAppearance);
}
