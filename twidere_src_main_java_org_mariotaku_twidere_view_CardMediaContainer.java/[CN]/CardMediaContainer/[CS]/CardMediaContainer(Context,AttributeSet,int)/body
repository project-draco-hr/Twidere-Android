{
  super(context,attrs,defStyleAttr);
  mMaxColumns=3;
  final TypedArray a=context.obtainStyledAttributes(attrs,new int[]{android.R.attr.horizontalSpacing,android.R.attr.verticalSpacing});
  mHorizontalSpacing=a.getDimensionPixelSize(0,0);
  mVerticalSpacing=a.getDimensionPixelSize(1,0);
  a.recycle();
}
