{
  super(itemView);
  this.adapter=adapter;
  content=(IColorLabelView)itemView.findViewById(R.id.content);
  profileImage=(ImageView)itemView.findViewById(R.id.profileImage);
  nameView=(NameView)itemView.findViewById(R.id.name);
