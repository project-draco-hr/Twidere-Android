{
switch (v.getId()) {
case R.id.sign_up:
{
      final Intent intent=new Intent(Intent.ACTION_VIEW).setData(Uri.parse(TWITTER_SIGNUP_URL));
      startActivity(intent);
      break;
    }
case R.id.sign_in:
{
    doLogin();
    break;
  }
case R.id.sign_in_method_introduction:
{
  final FragmentManager fm=getSupportFragmentManager();
  new SignInMethodIntroductionDialogFragment().show(fm.beginTransaction(),"sign_in_method_introduction");
  break;
}
}
}
