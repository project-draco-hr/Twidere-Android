{
  setRefreshing(true);
  final long accountId=args.getLong(EXTRA_ACCOUNT_ID,-1);
  final long maxId=args.getLong(EXTRA_MAX_ID,-1);
  final long sinceId=args.getLong(EXTRA_SINCE_ID,-1);
  final String query=args.getString(EXTRA_QUERY);
  final int tabPosition=args.getInt(EXTRA_TAB_POSITION,-1);
  final boolean makeGap=args.getBoolean(EXTRA_MAKE_GAP,true);
  final boolean twitterOptimizedSearches=mPreferences.getBoolean(KEY_TWITTER_OPTIMIZED_SEARCHES);
  return new TweetSearchLoader(getActivity(),accountId,query,sinceId,maxId,getAdapterData(),getSavedStatusesFileArgs(),tabPosition,fromUser,makeGap,twitterOptimizedSearches);
}
