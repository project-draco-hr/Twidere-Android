{
  mAsyncTaskManager.add(new GetActivitiesTask(this,"get_activities_by_friends",accountIds,maxIds,sinceIds){
    @Override protected void saveReadPosition(    long accountId,    Twitter twitter){
    }
    @Override protected ResponseList<Activity> getActivities(    long accountId,    Twitter twitter,    Paging paging) throws TwitterException {
      return twitter.getActivitiesByFriends(paging);
    }
    @Override protected Uri getContentUri(){
      return Activities.ByFriends.CONTENT_URI;
    }
  }
,true);
}
