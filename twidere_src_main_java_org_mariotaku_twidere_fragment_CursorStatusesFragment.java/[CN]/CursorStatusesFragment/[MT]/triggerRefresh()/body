{
  super.triggerRefresh();
  getStatuses(new SimpleRefreshTaskParam(){
    @NonNull @Override public UserKey[] getAccountKeysWorker(){
      return CursorStatusesFragment.this.getAccountKeys();
    }
    @Override public boolean hasMaxIds(){
      return false;
    }
    @Nullable @Override public String[] getSinceIds(){
      return getNewestStatusIds(getAccountKeys());
    }
    @Nullable @Override public long[] getSinceSortIds(){
      final Context context=getContext();
      if (context == null)       return null;
      return DataStoreUtils.getNewestStatusSortIds(context,getContentUri(),getAccountKeys());
    }
    @Override public boolean shouldAbort(){
      return getContext() == null;
    }
  }
);
  return true;
}
