{
  if (context == null || user_id == -1)   return;
  sUserNicknames.put(user_id,nickname);
  final SharedPreferences prefs=context.getSharedPreferences(USER_NICKNAME_PREFERENCES_NAME,Context.MODE_PRIVATE);
  final SharedPreferences.Editor editor=prefs.edit();
  editor.putString(String.valueOf(user_id),nickname);
  editor.commit();
}
