{
  final MediaPlayer mp=mMediaPlayer;
  if (mp == null || mp.isPlaying())   return;
  final ImageButton b=mVolumeButton;
  if (b != null) {
    b.setImageResource(mPlayAudio ? R.drawable.ic_action_speaker_max : R.drawable.ic_action_speaker_muted);
  }
  if (mPlayAudio) {
    mp.setVolume(1,1);
  }
 else {
    mp.setVolume(0,0);
  }
}
