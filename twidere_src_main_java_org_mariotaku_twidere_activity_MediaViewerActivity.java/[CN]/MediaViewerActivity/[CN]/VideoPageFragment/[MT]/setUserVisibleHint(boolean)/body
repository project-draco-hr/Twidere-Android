{
  super.setUserVisibleHint(isVisibleToUser);
  if (isVisibleToUser) {
    final FragmentActivity activity=getActivity();
    if (activity != null) {
      activity.supportInvalidateOptionsMenu();
    }
  }
 else   if (mVideoView != null && mVideoView.isPlaying()) {
    mVideoView.pause();
    updatePlayerState();
  }
}
