{
  super.onActivityCreated(savedInstanceState);
  setHasOptionsMenu(true);
  Handler handler=mVideoViewProgress.getHandler();
  if (handler == null) {
    handler=new Handler(getActivity().getMainLooper());
  }
  AudioManager am=(AudioManager)getContext().getSystemService(Context.AUDIO_SERVICE);
  mPlayAudio=am.getRingerMode() == AudioManager.RINGER_MODE_NORMAL;
  mVideoProgressRunnable=new VideoPlayProgressRunnable(handler,mVideoViewProgress,mDurationLabel,mPositionLabel,mVideoView);
  mVideoViewOverlay.setOnClickListener(this);
  mVideoView.setOnPreparedListener(this);
  mVideoView.setOnErrorListener(this);
  mVideoView.setOnCompletionListener(this);
  mPlayPauseButton.setOnClickListener(this);
  mVolumeButton.setOnClickListener(this);
  mVideoControl.setVisibility(View.GONE);
  startLoading(false);
  setMediaViewVisible(false);
  updateVolume();
}
