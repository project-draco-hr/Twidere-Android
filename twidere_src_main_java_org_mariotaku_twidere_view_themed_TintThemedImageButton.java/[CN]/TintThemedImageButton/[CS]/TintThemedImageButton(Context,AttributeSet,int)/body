{
  super(context,attrs,defStyleAttr);
  final TypedArray a=context.obtainStyledAttributes(attrs,new int[]{android.R.attr.color,android.R.attr.colorForeground});
  if (a.hasValue(0)) {
    mDefaultColor=a.getColor(0,0);
  }
 else {
    mDefaultColor=a.getColor(1,0);
  }
  setColorFilter(mDefaultColor,Mode.SRC_ATOP);
  a.recycle();
}
