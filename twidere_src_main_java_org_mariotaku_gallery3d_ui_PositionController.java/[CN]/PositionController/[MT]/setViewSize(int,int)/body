{
  if (viewW == mViewW && viewH == mViewH)   return;
  final boolean wasMinimal=isAtMinimalScale();
  mViewW=viewW;
  mViewH=viewH;
  initPlatform();
  setBoxSize(viewW,viewH,true);
  updateScaleAndGapLimit();
  if (wasMinimal) {
    mBox.mCurrentScale=mBox.mScaleMin;
  }
  if (!startOpeningAnimationIfNeeded()) {
    skipToFinalPosition();
  }
}
