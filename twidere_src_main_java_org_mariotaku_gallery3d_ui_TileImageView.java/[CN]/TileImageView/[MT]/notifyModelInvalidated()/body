{
  invalidateTiles();
  if (mModel == null) {
    mScreenNail=null;
    mImageWidth=0;
    mImageHeight=0;
    mLevelCount=0;
  }
 else {
    setScreenNail(mModel.getScreenNail());
    mImageWidth=mModel.getImageWidth();
    mImageHeight=mModel.getImageHeight();
    mLevelCount=mModel.getLevelCount();
  }
  layoutTiles(mCenterX,mCenterY,mScale,mRotation);
  invalidate();
}
