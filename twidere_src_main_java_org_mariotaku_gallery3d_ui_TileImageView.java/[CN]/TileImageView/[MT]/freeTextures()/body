{
  mIsTextureFreed=true;
  if (mTileDecoder != null) {
    mTileDecoder.cancel();
    mTileDecoder.get();
    mTileDecoder=null;
  }
  final int n=mActiveTiles.size();
  for (int i=0; i < n; i++) {
    final Tile texture=mActiveTiles.valueAt(i);
    texture.recycle();
  }
  mActiveTiles.clear();
  mTileRange.set(0,0,0,0);
synchronized (this) {
    mUploadQueue.clean();
    mDecodeQueue.clean();
    Tile tile=mRecycledQueue.pop();
    while (tile != null) {
      tile.recycle();
      tile=mRecycledQueue.pop();
    }
  }
  setScreenNail(null);
  if (sTilePool != null) {
    sTilePool.clear();
  }
}
