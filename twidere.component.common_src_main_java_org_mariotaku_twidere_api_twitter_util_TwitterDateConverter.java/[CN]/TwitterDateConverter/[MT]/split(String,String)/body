{
  List<String> l=new ArrayList<>();
  int offset=0;
  while (true) {
    int index=input.indexOf(delim,offset);
    if (index == -1) {
      l.add(input.substring(offset));
      return l;
    }
 else {
      l.add(input.substring(offset,index));
      offset=(index + delim.length());
    }
  }
}
