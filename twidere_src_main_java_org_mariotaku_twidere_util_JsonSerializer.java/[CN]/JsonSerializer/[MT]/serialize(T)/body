{
  if (object == null)   return null;
  try {
    final JsonMapper<T> mapper=(JsonMapper<T>)LoganSquareMapperFinder.mapperFor(object.getClass());
    return mapper.serialize(object);
  }
 catch (  IOException e) {
    if (BuildConfig.DEBUG) {
      Log.w(Constants.LOGTAG,e);
    }
    return null;
  }
}
