{
switch (message.what) {
case MSG_HIDE_BARS:
{
      activity.hideBars();
      break;
    }
case MSG_REFRESH_BOTTOM_CONTROLS:
{
    break;
  }
case MSG_ON_FULL_SCREEN_CHANGED:
{
  break;
}
case MSG_UPDATE_ACTION_BAR:
{
activity.updateBars();
break;
}
case MSG_WANT_BARS:
{
activity.wantBars();
break;
}
case MSG_UNFREEZE_GLROOT:
{
mGLRoot.unfreeze();
break;
}
}
}
