{
  if (!mShowBars)   return;
  mShowBars=false;
  mActionBar.hide();
  final TranslateAnimation anim=new TranslateAnimation(Animation.RELATIVE_TO_SELF,0,Animation.RELATIVE_TO_SELF,0,Animation.RELATIVE_TO_SELF,0,Animation.RELATIVE_TO_SELF,1);
  anim.setDuration(getResources().getInteger(android.R.integer.config_shortAnimTime));
  anim.setAnimationListener(new AnimationListener(){
    @Override public void onAnimationEnd(    final Animation animation){
      mMenuBar.setVisibility(View.GONE);
    }
    @Override public void onAnimationRepeat(    final Animation animation){
    }
    @Override public void onAnimationStart(    final Animation animation){
    }
  }
);
  mMenuBar.startAnimation(anim);
  mHandler.removeMessages(MSG_HIDE_BARS);
}
