{
  if (Build.VERSION.SDK_INT >= Build.VERSION_CODES.JELLY_BEAN_MR1)   return GetLayoutDirectionAccessorJB.getLayoutDirection(conf);
  final String lang=conf.locale.getLanguage();
  return "ar".equalsIgnoreCase(lang) ? Configuration.SCREENLAYOUT_LAYOUTDIR_RTL : Configuration.SCREENLAYOUT_LAYOUTDIR_LTR;
}
