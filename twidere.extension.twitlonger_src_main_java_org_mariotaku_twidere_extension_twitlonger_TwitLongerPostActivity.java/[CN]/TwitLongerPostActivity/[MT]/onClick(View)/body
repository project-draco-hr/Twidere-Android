{
switch (view.getId()) {
case R.id.action:
{
      if (mResult == null) {
        if (mTwitLongerPostTask != null) {
          mTwitLongerPostTask.cancel(true);
        }
        mTwitLongerPostTask=new TwitLongerPostTask();
        mTwitLongerPostTask.execute();
      }
 else {
        Twidere.replaceComposeActivityText(this,mResult);
      }
      break;
    }
}
}
