{
  final View view;
  if (convertView != null) {
    view=convertView;
  }
 else {
    view=mInflater.inflate(R.layout.list_item_user,parent,false);
  }
  if (mUsers instanceof Cursor) {
    final Cursor c=(Cursor)mUsers;
    c.moveToPosition(position);
    bindUser(view,c);
  }
 else   if (mUsers instanceof List) {
    bindUser(view,getItem(position));
  }
  return view;
}
