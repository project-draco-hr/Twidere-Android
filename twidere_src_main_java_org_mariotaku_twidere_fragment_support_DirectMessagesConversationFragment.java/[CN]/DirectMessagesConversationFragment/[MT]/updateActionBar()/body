{
  final BaseSupportActivity activity=(BaseSupportActivity)getActivity();
  final ActionBar actionBar=activity.getSupportActionBar();
  if (actionBar == null)   return;
  actionBar.setDisplayOptions(mRecipient != null ? ActionBar.DISPLAY_SHOW_TITLE : ActionBar.DISPLAY_SHOW_CUSTOM,ActionBar.DISPLAY_SHOW_TITLE | ActionBar.DISPLAY_SHOW_CUSTOM);
}
