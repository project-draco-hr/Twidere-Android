{
  mApiKey=apiKey;
  if (credentials != null) {
    final OAuthToken accessToken=new OAuthToken(credentials.oauth_token,credentials.oauth_token_secret);
    mAuthorization=new OAuthAuthorization(credentials.consumer_key,credentials.consumer_secret,accessToken);
    mEndpoint=new OAuthEndpoint("https://api.twitter.com/1.1/");
    mRequest=new RestRequest(GET.METHOD,false,"/account/verify_credentials.json",null,null,null,null,null,null);
  }
 else {
    mAuthorization=null;
    mEndpoint=null;
    mRequest=null;
  }
}
