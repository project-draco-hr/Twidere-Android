{
  if (view == null)   return;
  try {
    final Drawable bg=view.getBackground();
    if (bg == null)     return;
    final Drawable mutated=bg.mutate();
    if (mutated == null)     return;
    mutated.setColorFilter(color,PorterDuff.Mode.MULTIPLY);
    view.invalidate();
  }
 catch (  final Exception e) {
    e.printStackTrace();
  }
}
