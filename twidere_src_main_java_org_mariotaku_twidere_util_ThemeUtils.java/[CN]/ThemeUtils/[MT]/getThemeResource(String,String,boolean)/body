{
  if (VALUE_THEME_NAME_LIGHT.equals(name)) {
    if (VALUE_THEME_BACKGROUND_SOLID.equals(background))     return R.style.Theme_Twidere_Light_SolidBackground;
 else     if (VALUE_THEME_BACKGROUND_TRANSPARENT.equals(background))     return R.style.Theme_Twidere_Light_Transparent;
    return R.style.Theme_Twidere_Light;
  }
 else   if (VALUE_THEME_NAME_DARK.equals(name)) {
    if (VALUE_THEME_BACKGROUND_SOLID.equals(background))     return R.style.Theme_Twidere_Dark_SolidBackground;
 else     if (VALUE_THEME_BACKGROUND_TRANSPARENT.equals(background))     return R.style.Theme_Twidere_Dark_Transparent;
    return R.style.Theme_Twidere_Dark;
  }
  return R.style.Theme_Twidere_Light;
}
