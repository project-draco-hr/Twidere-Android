{
  final Drawable drawable=mBackground;
  if (drawable == null)   return;
  final int width=getWidth(), height=getHeight();
  if (width <= 0 || height <= 0)   return;
  final int contentLeft=getPaddingLeft(), contentTop=getPaddingTop(), contentRight=width - getPaddingRight(), contentBottom=height - getPaddingBottom();
  final int contentWidth=contentRight - contentLeft, contentHeight=contentBottom - contentTop;
  final int size=Math.min(contentWidth,contentHeight);
  drawable.setBounds(contentLeft + (contentWidth - size) / 2,contentTop + (contentHeight - size) / 2,contentRight - (contentWidth - size) / 2,contentBottom - (contentHeight - size) / 2);
}
